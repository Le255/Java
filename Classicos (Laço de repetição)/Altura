public class Altura {
	public static void main(String[] args) {
		double j,p,dj,dp,i=1;
		j=1.34;
		p=1.45;
		dj=0.025;
		dp=0.02;
 
		while (p>j) {
	           System.out.println("joão ficará mais alto que pedro em " +i+ " anos");
	           p=p+dp;
	           j=j+dj;
	           i++;
 
		}
 
 
		}
	}
